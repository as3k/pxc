{
  "name": "pxc",
  "version": "0.1.0",
  "description": "Modern CLI for creating Proxmox VMs with a Vercel-like experience",
  "type": "module",
  "bin": {
    "pxc": "./dist/index.js"
  },
  "scripts": {
    "start": "npx tsx src/index.tsx",
    "dev": "npx tsx watch src/index.tsx",
    "dev:mock": "MOCK_PROXMOX=1 npx tsx src/index.tsx",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "proxmox",
    "vm",
    "cli",
    "ink"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/as3k/pve-cli"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^8.0.1",
    "ink": "^5.2.0",
    "ink-select-input": "^6.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.45",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
